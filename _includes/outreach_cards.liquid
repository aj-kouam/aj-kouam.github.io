<style>
  .outreach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .outreach-card {
    border: 1px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
    background-color: white;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  }

  .outreach-card:hover {
    transform: scale(1.02);
  }

  .outreach-card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
  }

  .outreach-card-body {
    padding: 0.8rem 1rem;
    font-size: 0.9rem;
  }

  .outreach-card-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .outreach-card-date {
    font-size: 0.8rem;
    color: #666;
    margin-bottom: 0.4rem;
  }

  .outreach-card-text {
    font-size: 0.85rem;
    color: #333;
  }
</style>

<div class="outreach-grid">
  {% assign sorted_outreach = site.data.outreach | sort: "date" | reverse %}
  {% for item in sorted_outreach %}
    <div class="outreach-card">
      {% if item.link %}
      <a href="{{ item.link }}" target="_blank" rel="noopener noreferrer">
      {% endif %}
        {% if item.image %}
          <img src="{{ item.image }}" alt="{{ item.title }}">
        {% endif %}
        <div class="outreach-card-body">
          <div class="outreach-card-title">{{ item.title }}</div>
          <div class="outreach-card-date">{{ item.date | date: "%B %Y" }}</div>
          <div class="outreach-card-text">{{ item.description }}</div>
          {% if item.caption %}
            <div class="outreach-card-caption">{{ item.caption }}</div>
          {% endif %}
        </div>
      {% if item.link %}
      </a>
      {% endif %}
    </div>
  {% endfor %}
</div>
